<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- note in support.v7, it's a SwitchPreferenceCompat, in support.v14 it's SwitchPreference -->
    <SwitchPreference
        android:key="switch_key"
        android:title="switch Preference"
        android:defaultValue="true" />
    <!-- This is not supported in v7 (yet?) in support preference. It is in the v14 though.-->
    <MultiSelectListPreference
        android:dialogTitle="Multi Select Dialog"
        android:key="multiselect_key"
        android:summary="Does this show?"
        android:title="Multi Select Title"
        android:entries="@array/weekdays"
        android:entryValues="@array/weekdays_values"
        android:defaultValue="@array/empty_array"
        />

</PreferenceScreen>